x = 14px
txt = #222
dim = #999
hl = hsl(25,100,50)

df()
  s x
  lh 1.5
  ff sans
  c #333

lhue = 210
link = hsl(lhue,100,50)
hover = hsl(lhue,100,60)

@import 'n/index'
@import 'm/all'

anchor()
  c link
  td none
  &:hover, &:focus
    c hover
a
  anchor()

body
  df()
  bg #fff

  #content
    cnt()

    p.tagline
      f 2em sans
      m 0 0 1.5em

  #main
    col 8
    section
      bt 1px solid #ddd
      mb 3em
      header
        clearfix()
        mb 1.5em
        h2
          c dim
          tt uppercase
          lh 2em
          pl 3px

  #sidebar
    col 4
    section
      mb 3em
      clearfix()
      header
        mb 1.5em
        h2
          tt uppercase
          c dim

@import 'partials/forms'
@import 'partials/header'
@import 'partials/footer'
@import 'sections/index'
@import 'sections/user_new'
@import 'sections/user_home'
@import 'sections/results'
