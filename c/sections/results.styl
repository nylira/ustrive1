body.results.index
  #content
    ul.results
      p 0 1.5em
      li.result
        clearfix()
        mb 1.5em
        relative()
        .avatar
          col 2
          .placeholder
            bg b4
            b 1px solid #ddd
            r cw*2
            ta center
            c dim
            f bold 2em sans
            lh cw*2
        .content
          col 10
          w cw*10 - x*3
          pl 1em
          h2
            f 2em/1.5 sans
          .desc
            m 0 cw 1.5em 0
          ul.actions
            clearfix()
            li
              float left
              a
                d block
                lh 3em
              &.proceed
                a
                  button()
                
              &.dismiss
                absolute top 0 left 0
                m -2px 0 0 -2px
                a
                  d block
                  bg #fff
                  r x
                  border-radius .75em
                  b 1px solid txt
